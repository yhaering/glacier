{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist", "types", ".next"],
      "outputMode": "errors-only"
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage"],
      "outputMode": "errors-only"
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage"],
      "outputMode": "errors-only"
    },
    "lint": {
      "dependsOn": ["build"],
      "outputMode": "errors-only"
    },
    "ci": {
      "dependsOn": ["build", "test", "test:integration", "lint"],
      "outputMode": "errors-only"
    }
  }
}
